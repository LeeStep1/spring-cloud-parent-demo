<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bit.module.manager.dao.FileInfoDao">


    <insert id="insert" parameterType="com.bit.module.manager.bean.FileInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_sys_file_info
        ( path,suffix, file_size,file_name,file_time)
        VALUES
            (
            #{path},
            #{suffix},
            #{fileSize},
            #{fileName},
            #{fileTime}
            )
    </insert>

    <select id="query" resultType="com.bit.module.manager.bean.FileInfo">

        SELECT  * FROM  t_sys_file_info WHERE  1=1

        <if  test="fileId!=null and fileId!=''">

            and  id=#{fileId}

        </if>
    </select>


    <select id="findById" resultType="com.bit.module.manager.bean.FileInfo">
        select * from t_sys_file_info where id = #{id}
    </select>

    <!-- 批量获取图片地址 -->
    <select id="queryByIds" resultType="com.bit.module.manager.bean.FileInfo">
        SELECT
            t.id,
            t.path,
            t.suffix,
            t.file_name fileName,
            t.file_size fileSize
        FROM
            t_sys_file_info t
        WHERE
            t.id IN
            <foreach collection="fileId" open="(" close=")" item="fileId" separator=",">
                #{fileId}
            </foreach>

    </select>


    <delete id="batchDelete" parameterType="long">
        DELETE FROM t_sys_file_info
        WHERE id IN
        <foreach collection="ids" item="id" index="index" separator="," open="(" close=")">
            #{id,jdbcType=BIGINT}
        </foreach>
    </delete>

</mapper>
