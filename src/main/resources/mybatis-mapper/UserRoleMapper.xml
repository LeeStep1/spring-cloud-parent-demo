<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.module.manager.dao.UserRoleDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="UserRole_columns">
	    <![CDATA[

			id as id,
			user_id as user_id,
			role_id as role_id,
			token as token

        ]]>
	</sql>


    <!-- 修改一条记录 -->
    <update id="update" parameterType="com.bit.module.manager.bean.UserRelRole">
        update t_user_role
        <trim prefix="set" suffixOverrides=",">
            <if test="userId != null">
                user_id =#{userId,jdbcType=BIGINT},
            </if>
            <if test="roleId != null">
                role_id =#{roleId,jdbcType=BIGINT},
            </if>
            <if test="token != null">
                token =#{token,jdbcType=VARCHAR},
            </if>
        </trim>
        where id = #{id,jdbcType=BIGINT}
    </update>

    <!--根据userid更新token-->
    <update id="updateTokenByUserId" parameterType="com.bit.module.manager.bean.UserRelRole">
        update t_user_role
        <set>
            <if test="token != null">
                token =#{token,jdbcType=VARCHAR}
            </if>
        </set>
        <where>
            <if test="userId!=null">
                and user_id = #{userId,jdbcType=BIGINT}
            </if>
            <if test="roleId!=null">
                and role_id = #{roleId,jdbcType=BIGINT}
            </if>
        </where>
    </update>

    <select id="getUserRelRoleByUserIdRoleId" resultType="com.bit.module.manager.bean.UserRelRole">
        SELECT * FROM t_user_role
        <where>
            <if test="userId!=null">
                and user_id = #{userId,jdbcType=BIGINT}
            </if>
            <if test="roleId!=null">
                and role_id = #{roleId,jdbcType=BIGINT}
            </if>
        </where>
    </select>

</mapper>